<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.game.graphics.DebugMenuController">
    <top>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <Label text="Debug Menu, منوی تقلب">
                <font>
                    <Font size="25.0"/>
                </font>
                <VBox.margin>
                    <Insets top="20.0"/>
                </VBox.margin>
            </Label>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER">
            <Button onAction="#addCardToHand" text="Add a card to the player's hand"/>
            <Button onAction="#showHandCardNames" text="Show hand card names"/>
            <Button onAction="#fillPlayerLives" text="Increase a player's lives to two"/>
            <Button onAction="#decreasePlayerLives" text="Decrease a player's lives"/>
        </VBox>
    </center>
</BorderPane>
